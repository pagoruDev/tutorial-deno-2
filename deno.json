{
  "tasks": {
    "start": "deno run --watch=src/ main.ts ",
    "format": "deno fmt --watch",
    "dev": "deno task start & deno task format"
  },
  "imports": {
    "std/": "https://deno.land/std@0.192.0/"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": []
  }
}
